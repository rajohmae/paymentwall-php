    <script>
        var curbuyid = 0;
        $(function(){
            $("body").append('<div id="overlayer"></div><div id="loading_tip">&nbsp;</div>');
            $("#overlayer,#loading_tip").show();
            $('.charge_amount li').click(function(){
                $(this).addClass('current').siblings().removeClass('current');
                var str = $(this).find('p').text().substr(4);
                $("#amoutUs").text('USD ' + str);
                curbuyid = $(this).data("pid");
            });

        });
    </script>
    <script type="text/javascript">

        function buy(paycode,playspan_code){
            var pid = curbuyid;
            if (pid<1) {alert("You must first select an amount to continue!");return};
            var server = $('#server').val();
            var account = $('#account').val();
            var game = $('#game').val();
            $("#overlayer,#loading_tip").show();
            $.getJSON('http://pay.joygames.me/index.php/pay/buy',{'server':server, 'account':account, 'game':game,'productid': pid, 'rd':Math.random(), 'paycode':paycode},function (data){
                if(data.error) {
                    alert(data.error);
                    window.location.replace(window.location.href);
                } else {
                    $.post("http://pay.joygames.me/index.php/order/checkout",data,function(dt) {
                        if(dt.error) {
                            alert(dt.error);
                            window.location.replace(window.location.href);
                        } else {
                            window.location.href = dt.URI + "&paycode="+paycode;
                        }
                    }, 'json')
                }
            })
        }

        function show_loading(){
            $("#overlayer,#loading_tip").show();
        }
        function hide_loading(){
            $("#overlayer,#loading_tip").hide();
        }


    </script>

</head>
